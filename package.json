{
  "name": "@beyondthesketch/scriptuccinojs",
  "version": "2.0.0-alpha",
  "description": "A simple set of JavaScript function and utility modules for easily performing some common tasks.",
  "main": "index.js",
  "module": "src/index.js",
  "scripts": {
    "test": "jest",
    "build:dev": "babel src/**/* --ignore='src/**/*/index.js' --out-dir esm/ && webpack",
    "postbuild:dev": "cp ./umd/scriptuccino.min.js ./docs/js/",
    "build": "npm test && babel src/**/* --ignore='src/**/*/index.js' --presets minify --out-dir esm/ && webpack --env production",
    "postbuild": "cp ./umd/scriptuccino.min.js ./docs/js/",
    "prepare": "npm run build",
    "start": "webpack-dev-server --config docs-webpack.config.js",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondthesketch/ScriptuccinoJS.git"
  },
  "author": "Nazeer Ruhomutally <nazeer@beyondthesketch.com> (https://www.beyondthesketch.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beyondthesketch/ScriptuccinoJS/issues"
  },
  "homepage": "https://github.com/beyondthesketch/ScriptuccinoJS#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
    "@babel/plugin-transform-object-assign": "^7.16.7",
    "@babel/plugin-transform-spread": "^7.16.7",
    "@babel/preset-env": "^7.17.10",
    "babel-loader": "^8.2.5",
    "babel-minify": "^0.5.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.2",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "semantic-release": "^17.4.7",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "modules"
    ],
    "moduleNameMapper": {
      "^whenPageReady.js$": "<rootDir>/src/events/page/whenPageReady.js",
      "^whenPageLoaded.js$": "<rootDir>/src/events/page/whenPageLoaded.js",
      "^whenScrollEnds.js$": "<rootDir>/src/events/scroll/whenScrollEnds.js",
      "^applyTransition.js$": "<rootDir>/src/fx/applyTransition.js",
      "^simpleDebounce.js$": "<rootDir>/src/utils/simpleDebounce.js"
    }
  },
  "files": [
    "LICENSE",
    "README.md",
    "index.js",
    "esm/",
    "umd/"
  ],
  "publishConfig": {
    "access": "public",
    "branches": [
      "master",
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  }
}
